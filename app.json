{
  "expo": {
    "name": "scanner-app",
    "slug": "scanner-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/scan-svgrepo-com.svg",  
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/scan-svgrepo-com.svg",
      "resizeMode": "contain", 
      "backgroundColor": "#F54927"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.IUDC.Scanner3D",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "Esta app usa la cámara para escanear objetos 3D.",
        "NSPhotoLibraryUsageDescription": "Acceso a la galería para guardar capturas."
      },
      "icon": "./assets/scan-svgrepo-com.svg"  
    },
    "android": {
      "package": "com.IUDC.Scanner3D",
      "minSdkVersion": 20,
      "adaptiveIcon": {
        "foregroundImage": "./assets/scan-svgrepo-com.svg",
        "backgroundColor": "#F54927"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.ico"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "node_modules/react-native-vector-icons/Fonts/MaterialCommunityIcons.ttf"
          ]
        }
      ]
    ]
  }
}
