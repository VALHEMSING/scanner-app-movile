{
  "expo": {
    "name": "scanner-app",
    "slug": "scanner-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/barcode-scanner.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/barcode-scanner.png",
      "resizeMode": "contain",
      "backgroundColor": "#F54927"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.IUDC.Scanner3D",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "Esta app usa la cámara para escanear objetos 3D.",
        "NSPhotoLibraryUsageDescription": "Acceso a la galería para guardar capturas."
      },
      "icon": "./assets/barcode-scanner.png"
    },
    "android": {
      "package": "com.IUDC.Scanner3D",
      "adaptiveIcon": {
        "foregroundImage": "./assets/barcode-scanner.png",
        "backgroundColor": "#F54927"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.ico"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "node_modules/react-native-vector-icons/Fonts/MaterialCommunityIcons.ttf"
          ]
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "ed0a09f1-528c-405b-a81a-2edbd5938aac"
      }
    }
  }
}
